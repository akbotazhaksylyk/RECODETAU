<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Overview</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        h1 {
            color: #333;
            /* Dark grey for visibility */
            margin-left: -210px;
            /* Shifts the header to the left, aligning it with the page edge */
            padding-left: 500px;
            /* Adds padding to maintain spacing from the very */
            margin-top: 30px;
        }

        .dashboard-container {
    display: flex;
    flex-wrap: wrap; /* Allows multiple rows */
    justify-content: space-around; /* Evenly spaces the cards within the container */
    margin-left: 220px; /* Offset to the right of the navbar */
    padding: 20px;
    width: calc(100% - 220px); /* Adjust width to account for navbar */
}

.card {
    width: calc(33.333% - 20px); /* Width of each card taking margins into account */
    margin: 10px; /* Margin around each card */
    padding: 10px;
    background: #fff;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
}

        /* Стили для кнопки добавления карточек */
        #addCardsButton {
            margin-left: 210px;
            /* Аналогично отступу для .dashboard-container */
            padding: 10px 20px;
            margin-top: 20px;
        }

        .card.order {
            /* стили карточки */
            flex: 0 1 calc(33.333% - 20px);
            /* меньше трети контейнера, учитывая gap */
            display: none;
            /* начальное состояние - не показывается */
            /* ... */
        }

        /* Для анимации отображения */
        .card-animation {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
        }
    </style>
</head>

<body>
    <%- include('navbar') %>
        <div>
            <h1>Загрузить драйвера POS-терминала</h1>
            <div class="upload-container">
                <input type="file" name="file" required>
                <button id="uploadButton">Загрузить файл</button>
            </div>
        </div>

        <!-- Контейнер для карточек -->
        <div class="dashboard-container" id="orderCardContainer">
            <!-- Карточки будут добавляться сюда -->
        </div>

        <script src="public/js/script.js"></script>

        <script>
            document.getElementById('uploadButton').addEventListener('click', function () {
                var orderCardContainer = document.getElementById('orderCardContainer');

                // Clear previous content
                orderCardContainer.innerHTML = '';

                // Create the HTML for six cards, two rows of three cards each
                var cardHTML = `
        <div class="card order card-animation">
            <h3>Order 1</h3>
            <p>30.450 ₸</p>
            <p>Caesar salad 2.500 ₸</p>
            <p>Beshbarmak 12.500 ₸</p>
            <p>Barbecue 15.450 ₸</p>
        </div>
        <div class="card order card-animation">
            <h3>Order 2</h3>
            <p>50.000 ₸</p>
            <p>Pizza Margherita 5.000 ₸</p>
            <p>Lasagna 20.000 ₸</p>
            <p>Tiramisu 25.000 ₸</p>
        </div>
        <div class="card order card-animation">
            <h3>Order 3</h3>
            <p>40.000 ₸</p>
            <p>Sushi Set 10.000 ₸</p>
            <p>Ramen 15.000 ₸</p>
            <p>Matcha Ice Cream 15.000 ₸</p>
        </div>
        <div class="card order card-animation">
            <h3>Order 4</h3>
            <p>35.000 ₸</p>
            <p>Chicken Wings 3.500 ₸</p>
            <p>Steak 25.500 ₸</p>
            <p>Fries 6.000 ₸</p>
        </div>
        <div class="card order card-animation">
            <h3>Order 5</h3>
            <p>45.000 ₸</p>
            <p>Salmon Sushi 15.000 ₸</p>
            <p>Green Tea 5.000 ₸</p>
            <p>Tempura 25.000 ₸</p>
        </div>
        <div class="card order card-animation">
            <h3>Order 6</h3>
            <p>55.000 ₸</p>
            <p>Beef Burger 20.000 ₸</p>
            <p>Coke 5.000 ₸</p>
            <p>Cheesecake 30.000 ₸</p>
        </div>
    `;

                // Set the new HTML inside the container
                orderCardContainer.innerHTML = cardHTML;

                // Find the cards and make them visible
                var cards = orderCardContainer.querySelectorAll('.card');
                cards.forEach(function (card) {
                    card.style.display = 'block';
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                });

                // Trigger the animation
                setTimeout(function () {
                    cards.forEach(function (card) {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    });
                }, 0); // setTimeout with 0 delay to trigger the CSS transition
            });
        </script>
</body>

</html>